{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard-with-typescript", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "tsconfig.json"
  },
  "plugins": ["react"],
  "rules": {
    "semi": [2, "always"],
    "@typescript-eslint/semi": "off",
    "no-unexpected-multiline": "error",
    "comma-dangle": [0, "always"]
  }
}
